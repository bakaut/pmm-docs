# Example environment configuration for PostgreSQL
# Save as: .env.postgresql

# Core bot settings
BOT_TOKEN=your_telegram_bot_token_here

# Database configuration - PostgreSQL
DATABASE__TYPE=postgresql
DATABASE__URL=postgresql://username:password@localhost:5432/database_name

# Alternative PostgreSQL configuration (fallback if no URL provided)
# DATABASE__HOST=localhost
# DATABASE__PORT=5432
# DATABASE__NAME=poymoymir
# DATABASE__USER=your_postgres_user
# DATABASE__PASSWORD=your_postgres_password

# AI configuration
AI__OPEROUTER_KEY=your_openrouter_api_key
AI__MODEL=openai/gpt-4o-2024-05-13
AI__ENDPOINT=https://openrouter.ai/api/v1/chat/completions

# Session settings
SESSION_LIFETIME=87600

# Feature flags
ENABLE_CONVERSATION_RESET=true

# Logging
LOG_LEVEL=INFO
LOG_NAME=poymoymir

# Network settings
NETWORK__CONNECT_TIMEOUT=10
NETWORK__READ_TIMEOUT=30
NETWORK__RETRY_TOTAL=3

# Suno API configuration
SUNO__API_URL=https://apibox.erweima.ai/api/v1/generate
SUNO__MODEL=V4_5PLUS

# Storage configuration
STORAGE__SONG_PATH=/function/storage/songs/

# Cache configuration (Redis/SQLite)
CACHE__REDIS_URL=redis://localhost:6379/0
CACHE__SQLITE_PATH=/function/storage/songs/sqlvec.db
CACHE__ENABLE_EMBEDDINGS=true
CACHE__DEFAULT_TTL=3600
